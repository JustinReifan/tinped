<IfModule mod_rewrite.c>
    RewriteEngine On

    # ========================================
    # 1. REDIRECT WWW → NON-WWW + HTTP → HTTPS
    # ========================================
    # Prioritas utama: tangani www dan HTTP sekaligus
    RewriteCond %{HTTP_HOST} ^www\.tinped\.com [NC,OR]
    RewriteCond %{HTTPS} off
    RewriteCond %{HTTP_HOST} ^(?:www\.)?(tinped\.com)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [L,R=301]
    
    # ========================================
    # 2. REWRITE KE FOLDER PUBLIC (Jika ada)
    # ========================================
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>